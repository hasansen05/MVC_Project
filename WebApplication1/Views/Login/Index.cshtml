    <link rel="stylesheet" type="text/css" href=" ~/LoginContents/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href=" ~/LoginContents/css/util.css">
    <link rel="stylesheet" type="text/css" href=" ~/LoginContents/css/main.css">
    <!--===============================================================================================-->
</head>

<body>
    @using (Html.BeginForm( "Account","Login"))
    {


    <div class="container-login100" style="background-image: url(' ~/LoginContents/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
            <form class="login100-form validate-form">
                <span class="login100-form-title p-b-37">
                    GIRIS YAP
                </span>

                <div class="wrap-input100 input m-b-20">
                    <input class="input100" type="text" name="email" placeholder="username or email">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 input m-b-25" >
                    <input class="input100" type="password" name="password" placeholder="password">
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                       GİRİŞ
                    </button>
                   
                </div>
               
                @Html.Raw(TempData["msg"])
            </form>


        </div>
    </div>



    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src=" ~/LoginContents/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src=" ~/LoginContents/vendor/animsition/js/animsition.min.js"></script>
    <script src=" ~/LoginContents/vendor/bootstrap/js/popper.js"></script>
    <script src=" ~/LoginContents/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src=" ~/LoginContents/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src=" ~/LoginContents/vendor/daterangepicker/moment.min.js"></script>
    <script src=" ~/LoginContents/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src=" ~/LoginContents/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src=" ~/LoginContents/js/main.js"></script>
    }
</body>
</html>